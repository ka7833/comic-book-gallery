@model ComicBookGallery.Models.ComicBook
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // to tell MVC we want to use a layout page, we need to set the path of this view
    ViewBag.Title = Model.DisplayText;

}

<h1>@Model.SeriesTitle</h1>
<h2>Issue #@Model.IssueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(Model.DescriptionHtml)</div>

@if (Model.Artists.Length > 0)
{
    <h5>Artists:</h5>
    <div>
        <ul>
            @foreach (var artist in Model.Artists)
            {
                <li>@artist.Role: @artist.Name</li> <!--allows us to let razor know to switch from writing code to text content-->
            }
        </ul>
    </div>
}

